<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".IssuedCouponDetail">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imageview_coupon_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        fresco:roundAsCircle="true"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/textview_coupon_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/textview_coupon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/textview_coupon_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/textview_coupon_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="On"
            android:textOff="Off"/>
    </LinearLayout>

</LinearLayout>
